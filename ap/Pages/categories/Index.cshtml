@page
@model ap.Pages.categories.IndexModel

<div class="container p-3">
	<div class="row pt-4">

		<div class="col-6">

			<h2 class="text-primary">category list</h2>
		</div>

		<div class="col-6 text-end">
			<a asp-page="create" class="btn btn-primary">
				<i class="bi bi-fuel-pump"></i> &nbsp;create new category
				
			</a>

		</div>
	</div>
</div>
<br /><br />

<table class="table table-boardered table-striped" style="width:100%">
	<thead>
		<tr>
			<th>
				category name


			</th>
			<th>
				display order
			</th>

			
							

			

		</tr>
	</thead>
		<tbody>
		@foreach (var obj in Model.Categories)
		{
			
		 
		<tr>
				<td width="50">@obj.name</td>
				<td width="50">@obj.displayorder</td>
				<td>
					<a asp-page="Edit" class="btn btn-primary mx-2">
						<i class="bi bi-pencil-square"></i></a>

					<a asp-page="Delete" class="btn btn-danger mx-2">
						<i class="bi bi-trash"></i>
					</a>

				</td>
				
					
			</tr>
		}
		</tbody>







</table>